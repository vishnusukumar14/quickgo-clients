<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#f9f9ff"
        app:cardCornerRadius="24dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_marginBaseline="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/srvStorePrefShopImage_imageView"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:adjustViewBounds="false"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/srvStorePrefShopDetails_textView">

                <TextView
                    android:id="@+id/srvStorePrefShowAllDetails_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/md_theme_primaryContainer"
                    android:elevation="8dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="10dp"
                    android:text="View Details"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/md_theme_onPrimaryContainer"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/srvStorePrefViewOnMap_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@color/md_theme_primaryContainer"
                    android:elevation="8dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="10dp"
                    android:text="View on map"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/md_theme_onPrimaryContainer"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/srvStorePrefShopName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"

                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/archivo"
                android:text="shop_name"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/srvStorePrefShopImage_imageView" />

            <TextView
                android:id="@+id/srvStorePrefShopDetails_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat"
                android:text="shop_details"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/srvStorePrefShopName_textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>