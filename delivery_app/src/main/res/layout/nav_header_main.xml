    <ImageView
        android:id="@+id/profilePhoto_imageView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:contentDescription="@string/todo"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_image_24" />

    <TextView
        android:id="@+id/profileUsername_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/delivery_app"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto_imageView" />

    <TextView
        android:id="@+id/userEmailIDView_textBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/anonymous_pro"
        android:text="@string/email_id"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/profileUsername_textView"
        app:layout_constraintTop_toBottomOf="@+id/profileUsername_textView" />

    <TextView
        android:id="@+id/userUIDView_textBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/anonymous_pro"
        android:text="@string/uid"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userEmailIDView_textBox"
        app:layout_constraintTop_toBottomOf="@+id/userEmailIDView_textBox" />

</androidx.constraintlayout.widget.ConstraintLayout>