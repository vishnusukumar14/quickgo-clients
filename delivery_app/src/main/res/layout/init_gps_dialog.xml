<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:gravity="center">

    <TextView
        android:id="@+id/bottomDialogDutyModeStatusSubMessage_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/anonymous_pro"
        android:text="@string/gps_initialization_under"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottomDialogDutyModeStatusMainBanner_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/anonymous_pro"
        android:text="@string/initializing_gps_please_wait"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="@+id/bottomDialogDutyModeStatusMainBanner_textView"
        app:layout_constraintStart_toStartOf="@+id/bottomDialogDutyModeStatusMainBanner_textView"
        app:layout_constraintTop_toBottomOf="@+id/bottomDialogDutyModeStatusSubMessage_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
