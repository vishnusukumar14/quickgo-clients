<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/obvOrderItem1_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:autofillHints="75415"
    android:padding="16dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/obvOrderItem_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#FDF6FE"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="add"
                android:hapticFeedbackEnabled="true">

                <TextView
                    android:id="@+id/srvObvOrderNo_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="Order #1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/srvObvOrderShopID_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="sid"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    card_view:layout_constraintEnd_toEndOf="@+id/srvObvOrderShopName_textView"
                    card_view:layout_constraintTop_toBottomOf="@+id/srvObvOrderShopName_textView" />

                <TextView
                    android:id="@+id/srvObvOrderTid_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="tid"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    card_view:layout_constraintEnd_toEndOf="@+id/srvObvOrderShopName_textView"
                    card_view:layout_constraintTop_toBottomOf="@+id/srvObvOrderShopID_textView" />

                <TextView
                    android:id="@+id/srvObvOrderShopName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="shop_name"
                    android:textColor="#0F1B59"
                    android:textStyle="bold"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/srvObvOrderOid_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/anonymous_pro"
                    android:text="oid"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="@+id/srvObvOrderTid_textView"
                    card_view:layout_constraintTop_toBottomOf="@+id/srvObvOrderTid_textView" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/srvObvOrdersOrderType_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#388E3C"
                        android:fontFamily="@font/montserrat"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:text="order_type"
                        android:textAlignment="textEnd"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/srvObvOrderKeepItView_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:srcCompat="@drawable/baseline_check_circle_outline_24" />

                    <TextView
                        android:id="@+id/srvObvCurrentSelectedOrderView_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FBBE05"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="3dp"
                        android:text="@string/currently_delivering"
                        android:textColor="#6C0404"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
