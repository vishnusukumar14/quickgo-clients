
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemInfo_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:autofillHints="75415"
    android:backgroundTintMode="add"
    app:cardBackgroundColor="#E5EDED"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10A0FA"
        android:backgroundTint="#E16767"
        android:backgroundTintMode="add"
        android:hapticFeedbackEnabled="true">

        <ImageView
            android:id="@+id/vegieImageHomeView_imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/todo"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemDescriptionHomeView_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/archivo"
            android:text="ITEM NAME"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/vegieImageHomeView_imageView"
            app:layout_constraintStart_toStartOf="@+id/vegieImageHomeView_imageView"
            app:layout_constraintTop_toBottomOf="@+id/vegieImageHomeView_imageView" />


        <TextView
            android:id="@+id/itemPriceHomeView_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/montserrat"

            android:text="Price"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/addToCartHomeView_button"
            app:layout_constraintEnd_toEndOf="@+id/itemDescriptionHomeView_textView"
            app:layout_constraintStart_toStartOf="@+id/itemDescriptionHomeView_textView"
            app:layout_constraintTop_toBottomOf="@+id/itemDescriptionHomeView_textView" />

        <TextView
            android:id="@+id/itemIDView_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/anonymous_pro"
            android:orientation="vertical"
            android:textColor="#F7989595"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/addToCartHomeView_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/addToCartHomeView_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#043359"
            android:clickable="true"
            android:elevation="8dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/ADD_TO_CART"
            android:textColor="#FFC519"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>







