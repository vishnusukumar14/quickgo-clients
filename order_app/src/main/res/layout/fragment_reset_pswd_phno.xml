<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.authentication.signInWithEmailPswd.ResetPswdFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/passwordResetPhno_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B2FBF7F7"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/authBannerPswdResetFragmentPhno_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_lock_reset_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/archivo_black"
                android:lineSpacingExtra="5dp"
                android:paddingHorizontal="5dp"
                android:paddingTop="5dp"
                android:text="@string/reset_password"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView810378"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/enter_your_reg"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2042"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/enter_the_registered_email"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailFieldPswdResetFragmentPhno_editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autofillHints="email"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusViewPswdResetFragment_editTextText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/resetPasswordPswdResetFragment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#0F63A5"
                android:fontFamily="@font/montserrat"
                android:text="@string/send_link"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
