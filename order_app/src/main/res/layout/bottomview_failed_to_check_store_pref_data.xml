<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/btmviewFailedToCheckStorePrefDataHeading_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/store_preference"
        android:textAllCaps="true"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/btmviewFailedToCheckStorePrefDataLoadingView_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btmviewFailedToCheckStorePrefDataSubTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Failed to check for store preference data existence in the servers. You can set preference by clicking 'SET PREFERENCE' button, ignore if already set.\nDo you want to proceed anyways?"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btmviewFailedToCheckStorePrefDataRetryAgainBtn_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Retry Again"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btmviewFailedToCheckStorePrefDataSetPrefBtn_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="@string/set_preference"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btmviewFailedToCheckStorePrefDataCancelBtn_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btmviewFailedToCheckStorePrefProceedAnywaysBtn_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="Proceed Anyway"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
