<!-- menu_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/extView989"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/are_you_sure_you_want_to_place_order"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center|start"
        android:text="@string/once_order_is_placed_yo"
        android:textAlignment="viewStart"
        android:textColor="#686767"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/btmViewCallConfirm_progressBar"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/btmViewOrderConfrmStatusTV_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btmViewCallConfirmDeclineBtn_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#881414"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="16dp"
            android:text="Cancel Order"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btmViewPlaceOrderConfirmProceedBtn_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="#17531B"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/place_order"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
