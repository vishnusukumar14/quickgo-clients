<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signatureVerificationStatus_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/archivo_black"
        android:text="@string/initiating_payment_order"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/signatureVerificationBanner_textView"
        app:layout_constraintStart_toStartOf="@+id/signatureVerificationBanner_textView"
        app:layout_constraintTop_toBottomOf="@+id/signatureVerificationBanner_textView" />

    <ProgressBar
        android:id="@+id/signatureVerificationPB_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/signatureVerificationStatus_textView"
        app:layout_constraintEnd_toStartOf="@+id/signatureVerificationStatus_textView"
        app:layout_constraintTop_toTopOf="@+id/signatureVerificationStatus_textView" />

    <TextView
        android:id="@+id/signatureVerificationBanner_textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/please_wait_while_we"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signatureVerificationStatus_textView"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>